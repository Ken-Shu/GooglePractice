<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="30dp"
                android:src="@android:drawable/ic_input_get"
                android:scrollbarSize="30dp"
                android:id="@+id/cost_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputEditText
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/cost_image"
        android:id="@+id/cost_service"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:hint="Cost of Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/radio_image"
        android:layout_marginTop="5dp"
        android:src="@android:drawable/btn_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:layout_toRightOf="@+id/radio_image"
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:text="How was the service?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginTop="5dp"
            android:id="@+id/amazing"
            android:checked="true"
            android:text="Amazing(20%)"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginTop="5dp"
            android:id="@+id/good"
            android:text="Good(18%)"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginTop="5dp"
            android:id="@+id/ok"
            android:text="OK(15%)"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@android:drawable/btn_star"
            android:layout_marginTop="10dp"
            android:scrollbarSize="25dp"
            android:id="@+id/switch_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_toRightOf="@+id/switch_image"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:id="@+id/switch_button"
        android:text="Round up tip?"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button"
        android:onClick="OnClick"
        android:textSize="30dp"
        android:text="CALCULATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <LinearLayout
       android:gravity="right"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tip_text"
        android:layout_marginTop="18dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

   </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>